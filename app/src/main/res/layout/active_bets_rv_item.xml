<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40sp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_home_team_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/small_game_tv_time_match"
                app:layout_constraintRight_toLeftOf="@id/small_game_tv_vs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_vs"
                android:text="@string/vs"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/small_game_tv_home_team_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_away_team_name"
                app:layout_constraintLeft_toRightOf="@id/small_game_tv_vs"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/small_game_tv_home_team_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_date_match"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_time_match"
                app:layout_constraintLeft_toLeftOf="@id/small_game_tv_vs"
                app:layout_constraintRight_toRightOf="@id/small_game_tv_vs"
                app:layout_constraintTop_toBottomOf="@id/small_game_tv_date_match"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/small_game_tv_league_match"
                app:layout_constraintTop_toBottomOf="@id/small_game_tv_vs"
                app:layout_constraintLeft_toLeftOf="@id/small_game_tv_vs"
                app:layout_constraintRight_toRightOf="@id/small_game_tv_vs"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>